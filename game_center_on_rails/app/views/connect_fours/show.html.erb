<div>
  <table>
    <% if @game %>
      <th>
        <% for column in (1..7) %>
          <td>
            <input type="submit" name="column" value=<%=column%>>
          </td>
        <% end %>
      </th>
      <% for row in (0..5) %>
        <tr>
          <td></td>
          <% for column in (0..6) %>
            <td><%= @game[row][column] ? @game[row][column] : '__' %></td>
          <% end %>
        </tr>
      <%end%>
    <%end%>
  </table>
</div>

<%= flash[:success] %>

<hr>

<%= link_to "new game?", new_connect_four_path, method: :delete, data: {confirm: "Start a new game?"} %>